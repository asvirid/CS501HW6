<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sse.interfragmentcommratingbar.MainActivity"
    android:orientation = "vertical">

    <fragment
        android:id="@+id/drawablef"
        android:name="com.example.sse.interfragmentcommratingbar.DrawableFragment"
        android:layout_width="wrap_content"
        android:layout_height="505dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="50dp"
        tools:layout="@layout/fragment_drawable" />

    <fragment
        android:id="@+id/buttonf"
        android:name="com.example.sse.interfragmentcommratingbar.ButtonFragment"
        android:layout_width="308dp"
        android:layout_height="55dp"
        android:layout_above="@+id/drawablef"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="30dp"
        tools:layout="@layout/fragment_button" />


</RelativeLayout>
